@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>AgriEnergy Connect</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Poppins Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />

</head>
<body>
    <!-- Navbar -->

    @if (!(ViewData["HideNavbar"] as bool? ?? false))
{
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Agri Energy Connect</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    @if (Context.Session.GetString("FarmerUsername") != null)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Farmer/Dashboard">Profile</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Product/Index">Products</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Farmer/Logout">Logout</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Employee/Dashboard">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Farmer/Index">Farmers</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Product/Index">Products</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Employee/Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
}


    <!-- Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)  <!-- This is important! -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
