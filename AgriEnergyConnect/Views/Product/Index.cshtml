@model IEnumerable<AgriEnergyConnect.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@{
    var farmerUsername = Context.Session.GetString("FarmerUsername");
}

@if (!string.IsNullOrEmpty(farmerUsername))
{
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Product</a>
}
else
{
    <!-- Optionally display a message or leave this empty -->
    @* <p>You do not have permission to create products.</p> *@
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>In Stock</th>
            <th>Production Date</th>
            <th>
                 @if (!string.IsNullOrEmpty(farmerUsername)) // Only show edit/delete for farmers
                    {
                     <th>Actions</th>
                    }
                    else
                    {
                    }

            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.Price</td>
                <td>@product.InStock</td>
                <td>@product.ProductionDate.ToShortDateString()</td>
                <td>
                    @if (!string.IsNullOrEmpty(farmerUsername)) // Only show edit/delete for farmers
                    {
                        <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Delete", new { id = product.Id })" class="btn btn-danger">Delete</a>
                    }
                    else
                    {
                        <!-- No edit or delete buttons for employees -->
                        @* <span>View Only</span> *@
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
