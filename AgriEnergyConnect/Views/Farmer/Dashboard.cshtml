@model Tuple<IEnumerable<AgriEnergyConnect.Models.Product>, IEnumerable<AgriEnergyConnect.Models.Product>>

@{
    var allProducts = Model.Item1; // All products from other farmers
    ViewData["Title"] = "Farmer Dashboard";
}

<div class="container mt-4">
    <!-- Welcome Banner -->
    <div class="jumbotron text-white bg-success rounded p-4 mb-5 shadow-sm">
        <h1 class="display-5 fw-bold">Welcome to Agri-Energy Connect</h1>
        <p class="lead">Connect. Grow. Sell. Empowering local farmers through digital innovation and sustainable energy practices.</p>
    </div>

    <!-- Feature Tiles -->
    <div class="row mb-5 text-center">
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">‚ûï Add Your Product</h5>
                    <p class="card-text">Showcase your produce and connect with locak farmers.</p>
                    <a href="/Product/Create" class="btn btn-success">Add Product</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">üìò Educational Hub</h5>
                    <p class="card-text">Access farming tips, market trends, and sustainability guides.</p>
                    <a class="btn btn-disabled" aria-disabled="true" onclick="return false;">Coming Soon</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">üåæ Visit Marketplace</h5>
                    <p class="card-text">Browse products from other farmers in your network.</p>
                    <a  class="btn btn-disabled" aria-disabled="true" onclick="return false;">Coming Soon</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Marketplace Section -->
    <h3 id="marketplace" class="mb-4 text-dark">üåæ Explore Products from Local Farmers</h3>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in allProducts)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-success fw-semibold">@product.Name</h5>
                        <p class="mb-1"><strong>Category:</strong> @product.Category</p>
                        <p class="mb-1"><strong>Price:</strong> R @product.Price</p>
                        <p class="mb-1"><strong>Available:</strong> @(product.InStock ? "‚úÖ In Stock" : "‚ùå Out of Stock")</p>
                        <p class="text-muted"><small>Produced on: @product.ProductionDate.ToShortDateString()</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
