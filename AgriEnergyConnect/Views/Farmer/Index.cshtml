@model IEnumerable<AgriEnergyConnect.Models.Farmer>

@{
    ViewData["Title"] = "Farmers";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<a asp-action="Create" class="btn btn-success">Create New Farmer</a>

<h2>Farmers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.FullName</td>
                <td>@farmer.Username</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@farmer.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@farmer.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

