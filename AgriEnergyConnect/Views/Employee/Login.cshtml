@model AgriEnergyConnect.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["HideNavbar"] = true;
}

<h2>Employee Login</h2>
 
<form asp-action="Login" method="post">

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
     @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
    {
        <span class="text-danger mt-2 d-block">@ViewData.ModelState[string.Empty].Errors.First().ErrorMessage</span>
    }
</form>
